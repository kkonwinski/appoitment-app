{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
{#    {{ form_widget(form) }} #}
<div class="row">
    <div class="col-md-4">
        {{ form_row(form.street) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.city) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.buildingNumber) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.postCode) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.country) }}
    </div>
    {# {{ form_row(form.companyOpenHours.dayName) }} #}
</div>
<div class="row">
    {{ form_label(form.companyAdditionalInfos) }}

    {% for companyAdditionalInfo in form.companyAdditionalInfos %}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(companyAdditionalInfo.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(companyAdditionalInfo.phone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(companyAdditionalInfo.facebook) }}
            </div>
            <div class="col-md-4">
                {{ form_row(companyAdditionalInfo.instagram) }}
            </div>
            <div class="col-md-4">
                {{ form_row(companyAdditionalInfo.website) }}
            </div>
        </div>
    {% endfor %}
</div>

<div>
    {{ form_row(form.service) }}
</div>

<div class="row">
    <label class="col-md-12">{{ 'form.company_open_hours_days.label'|trans }}</label>


    <ul class="companyOpenHours"
        data-index="{{ form.companyOpenHours|length > 0 ? form.companyOpenHours|last.vars.name + 1 : 0 }}"
        data-prototype="{{ form_widget(form.companyOpenHours.vars.prototype)|e('html_attr') }}"
        {% for coh in form.companyOpenHours %}
            <li>{{ form_row(coh.dayName) }}</li>
            <li>{{ form_row(coh.openFrom) }}</li>
            <li>{{ form_row(coh.openTo) }}</li>
        {% endfor %}
    ></ul>

</div>
<div class="d-flex justify-content-center">
    <button type="button" class="add_item_link btn btn-outline-success" data-collection-holder-class="companyOpenHours">
        {{  'form.company_open_hours_days.btn_new_open_company_hours'|trans }}
    </button>
</div>
<button class="btn btn-outline-warning">{{ button_label|default('form.save'|trans) }}</button>
{{ form_end(form) }}
