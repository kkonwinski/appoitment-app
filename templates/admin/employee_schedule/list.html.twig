{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'view.employee_schedule.list'|trans }}: {{ app.user.fullName }}{% endblock %}



{% block body %}
    <div class="row">
        <div class="text-end">
            <a class="btn btn-outline-primary  mb-lg-3"
               href="{{ path('admin_employee_schedule_new',{'id':user.id}) }}">{{ 'admin.sidebar.employee_work_schedule_new'|trans }}</a>
        </div>
    </div>
    <h1>{{ 'view.employee_schedule.list'|trans }}: {{ user.fullName }}</h1>
    {% if employeeSchedules is not empty %}
        <table class="table table-striped col-12">
            <thead>
            <tr>
                <th>{{ 'view.employee_schedule.date_range'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for employeeSchedule in employeeSchedules %}
                <tr>
                    <td>{{ employeeSchedule.dayFrom|date("d.m.Y") }} - {{ employeeSchedule.dayTo|date("d.m.Y") }}</td>
                    <td class="d-flex justify-content-evenly">
                        <a href="{{ path('admin_employee_schedule_edit',{'id':employeeSchedule.id}) }}"
                           class="btn btn-outline-primary">{{ 'view.employee_schedule.edit'|trans }}</a>
                            {{ include('admin/employee_schedule/_partials/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(employeeSchedules) }}
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            <span>{{ 'view.employee_schedule.no_records_employee_schedule'|trans }}</span>
        </div>
    {% endif %}
{% endblock %}

